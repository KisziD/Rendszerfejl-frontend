<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backg"
    tools:context=".maintanance.taskStateChange_activity">

    <TextView
        android:id="@+id/name_tsc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="50dp"
    android:layout_marginRight="20dp"
    android:minHeight="48dp"
    android:textColor="@color/white"
    android:textSize="20sp" />

    <TextView
        android:id="@+id/date_tsc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/inst_tsc"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/state_tsc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:text="@string/state"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/spin_tsc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/white"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/reason_tsc"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/white"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/save_tsc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#50ACF6"
        android:fontFamily="sans-serif"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="20sp" />

        <Button
            android:id="@+id/back_bt_tsc"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="320dp"
            android:backgroundTint="#FF50ACF6"
            app:icon="@drawable/ic_baseline_arrow_back_ios_24"
            app:iconSize="40dp"
            app:iconTint="@color/white" />

</LinearLayout>